<div data-role="page">

  <%= render :partial => "/partials/page_head" %>
    
  <div data-role="content">
  
    <%= render :partial => "/partials/example_header", :locals => {:title => "Seed DB", :description => "
      This sample is designed to work hand in hand with the one about transactions. This will create a users_sample table in the database
      and populate it with ten rows.
    " }
    %>

    <%= render :partial => "/partials/language_tabs" %>
    
    <div class="sample ruby">
      <a href="callback:<%= url_for :action => :seed_db %>" data-role="button">Seed DB</a>
    </div>
    
    <div class="sample javascript">
          <a href="#" data-role="button" onclick="KitchenSink.Samples.Database.seed_db()">Seed DB</a>
    </div>

    <% if @users.length == 0 %>
      No users in the database
    <% else %>

      <table class="users_table">
        <tr>
          <th>User ID</th><th>Active</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user["user_id"] %></td><td><%= user["active"] == 1 ? "Yes" : "No" %></td>
          </tr>
        <% end %>
      </table>

      <a href="<%= url_for(:action => :confirm_transactions) %>" data-role="button">Transactions</a>
    <% end %>


  </div>   
</div>
