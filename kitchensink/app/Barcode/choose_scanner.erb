<div data-role="page">

<%= render :partial => "/partials/page_head" %>
  
<div data-role="content">

  <%= render :partial => "/partials/example_header", :locals => {:title => "Choose scanner", :description => "
    
  " }
  %>

  <%= render :partial => "/partials/language_tabs" %>

  <div data-role="content">
    <div class="sample ruby">
      <% $scanners.each_with_index do |scanner, index| %>
        <a href="#" data-ajax="false" onclick="KitchenSink.Samples.Barcode.scan_with_ruby(<%= index %>)" data-role="button"><%= scanner.friendlyName || scanner.scannerType %></a> 
      <% end %>
      <a href="<%= url_for :action => :enumerate_scanners %>" data-role="button" data-ajax="false" >Enumerate scanners</a>      
    </div>
      
    <div class="sample javascript">

      <div class="scanner_list">
      </div>
      
      <a href="#" data-role="button" onclick="KitchenSink.Samples.Barcode.enumerate_scanners()">Enumerate scanners</a>      
    </div>
      
  </div>

</div>
